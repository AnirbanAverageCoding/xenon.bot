{% extends "base.jinja2" %}

{% block css %}
    <link rel="stylesheet" href="/static/status.css">
{% endblock %}

{% block main %}
    <div class="container my-5 py-5">
        <h2 class="display-4">Shard Status</h2>
        <div class="alert alert-success pr-5" role="alert" style="display: inline-block">
            All systems operational
        </div>
        <div class="shards text-dark font-weight-bold pb-5">
            {% for i in range(160) %}
                <span class="shard text-success text-center m-1" data-toggle="tooltip" data-placement="top"
                      title="120 ms">
                    {{ i }}
                </span>
            {% endfor %}
        </div>
        <h2 class="display-4 pt-5 text-right">Metrics</h2>
        <h5 class="text-light-2 text-right pb-1">
            An overview over system relevant numbers
        </h5>
        <iframe src="https://grafana.merlin.gg/d-solo/OKEiqqjZz/embeds?orgId=1&panelId=2" width="100%" height="500"
                frameborder="0"></iframe>
        <iframe src="https://grafana.merlin.gg/d-solo/OKEiqqjZz/embeds?orgId=1&panelId=4" width="100%" height="500"
                frameborder="0"></iframe>
    </div>
{% endblock %}

{% block js %}
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
{% endblock %}